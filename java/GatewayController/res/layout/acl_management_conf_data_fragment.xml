<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
            android:id="@+id/aclMgmtSelectedItemLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <CheckBox
            android:id="@+id/aclMgmtAllowAllChkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aclMgmtSelectedItemLbl"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />

    <ExpandableListView
        android:id="@+id/aclMgmtConfigureAclListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aclMgmtAllowAllChkBox"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/aclMgmtAllowAllChkBox">
    </ExpandableListView>

</RelativeLayout>